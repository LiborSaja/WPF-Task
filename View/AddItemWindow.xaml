<Window x:Class="Task.View.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task.View"
        mc:Ignorable="d"
        Title="AddItemWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            
            <TextBlock Text="Model:" />
            <TextBox Name="ModelTextBox" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Datum Prodeje:" />
            <DatePicker Name="SaleDatePicker" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="Cena bez DPH:" />
            <TextBox Name="PriceWithoutVATTextBox" Width="200" Margin="0,5,0,10"/>

            <TextBlock Text="DPH:" />
            <TextBox Name="VATTextBox" Width="200" Margin="0,5,0,10"/>

            <Button Name="BtnAdd" Content="Přidat" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" Click="BtnAdd_Click"/>
        </StackPanel>
    </Grid>
</Window>
